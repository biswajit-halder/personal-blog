<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !='undefined' ? title : 'Personal Blog' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..."
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container p-5 shadow-lg rounded" style="height: 100vh;">
        <h1 class="mb-4">Blog Posts</h1>
        <div class="row">
            <% if (Array.isArray(blogs) && blogs.length> 0) { %>
                <% blogs.forEach(function(blog) { %>
                    <div class="col-md-4 mb-4 d-flex">
                        <div class="card h-100 w-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><a href="/blogs/<%= blog.id %>" class="text-decoration-none text-dark"><%= blog.title %></a></h5>
                                <p class="card-text flex-grow-1">
                                    <%= blog.desc.length > 100 ? blog.desc.substring(0, 100) + '...' : blog.desc %>
                                </p>
                                <div class="mt-auto text-end">
                                    <small class="text-muted"><%= blog.date %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No blogs available.</p>
            <% } %>
        </div>
    </div>
    </div>
</body>

</html>